page{
  background-color: #f8f8f8;

}
.reply{
    display: flex;
    flex-direction: row;
    margin: 10px;
    margin-right: 50px;    
}
.send{
    display: flex;
    flex-direction: row;
    margin: 10px;
    margin-left: 50px; 
    justify-content: flex-end;
}
.photo{
    width: 40px;
    height: 40px;
    flex-shrink: 0;
    border-radius: 5px;
}
.text{
    margin-left: 10px;
    margin-right: 10px;
    padding: 10px;
    border-radius: 5px; 
    background-color: #ffffff;
}
.sendMessage{
    display: flex;
    position: fixed;
    margin: 20px 10px 20px 10px;
    bottom: 0;
}
.inputMessage{
    border: solid 1px #dddddd;
    background-color: #ffffff;
    height: 30px;
    width: 280px;
    margin-right: 10px;
    border-radius: 5px;
}
.sendBtn{
    background-color: #6495ED;
    height: 31px;
    width: 60px;
    font-size: 12px;
    color: white;
    font-family:  SimHei;
}